{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "esnext",
    "module": "esnext",
    "noImplicitAny": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "removeComments": true,
    "strict": true,
    "outDir": "dist",
    "jsx": "preserve"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}